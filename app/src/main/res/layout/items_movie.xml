<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_light"
    android:layout_marginLeft="@dimen/component_normal"
    android:layout_marginTop="@dimen/component_normal"
    android:layout_marginRight="@dimen/component_small"
    android:layout_marginBottom="@dimen/component_small"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imagePoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image"
        android:background="@drawable/shape_top_round"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/imagePoster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lineImageProfilePicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider" android:background="@color/colorDivider"/>

    <com.dailyapps.dicodingmoviedbketpackpro.utils.components.AmTextView
        app:am_font_style="medium"
        android:id="@+id/labelTitle"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/text_normal"
        tools:text="Trailer True Beauty"
        android:layout_marginTop="@dimen/component_big"
        android:paddingLeft="@dimen/component_big"
        android:paddingRight="@dimen/component_big"
        app:layout_constraintTop_toBottomOf="@id/lineImageProfilePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.dailyapps.dicodingmoviedbketpackpro.utils.components.AmTextView
        android:id="@+id/labelDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/component_big"
        android:paddingRight="@dimen/component_big"
        android:paddingBottom="@dimen/component_extra"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_tiny"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTitle"
        tools:text="2020-09-01" />

    <ImageView
        android:id="@+id/buttonShare"
        android:layout_width="@dimen/component_huge"
        android:layout_height="@dimen/component_huge"
        android:gravity="center"
        android:padding="@dimen/component_small"
        app:srcCompat="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/labelDate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/component_extra"
        app:layout_constraintTop_toTopOf="@+id/labelDate"
        android:layout_marginEnd="@dimen/component_big"
        android:layout_marginRight="@dimen/component_big" />

</androidx.constraintlayout.widget.ConstraintLayout>